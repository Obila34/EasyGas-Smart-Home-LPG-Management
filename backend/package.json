{
  "name": "easygas-backend",
  "version": "1.0.0",
  "description": "Backend services for EasyGas Smart Home LPG Management system",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t easygas/backend .",
    "docker:run": "docker run -p 3000:3000 easygas/backend"
  },
  "keywords": [
    "iot",
    "smart-home",
    "lpg",
    "gas-monitoring",
    "sensors",
    "mqtt",
    "rest-api"
  ],
